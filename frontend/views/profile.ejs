<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile - NxtPick</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #0F172A;
            color: #F8FAFC;
            font-family: 'Inter', sans-serif;
        }
        .container {
            max-width: 1200px;
            margin: 50px auto;
        }
        .profile-header {
            text-align: center;
            margin-bottom: 40px;
        }
        .avatar {
            width: 120px;
            height: 120px;
            background: linear-gradient(135deg, #5B21B6, #8B5CF6, #3B82F6);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            margin: 0 auto 20px;
        }
        .section-title {
            font-size: 1.5rem;
            margin-bottom: 20px;
            color: #8B5CF6;
        }
        .list-group-item {
            background-color: #1E293B;
            border: 1px solid rgba(139, 92, 246, 0.2);
            color: #CBD5E1;
        }
        .no-favorites {
            text-align: center;
            color: #94A3B8;
            font-style: italic;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="profile-header">
            <div class="avatar"><%= user.username.charAt(0).toUpperCase() %></div>
            <h1>Welcome, <%= user.username %></h1>
            <p>Email: <%= user.email %></p>
        </div>

        <div class="row">
            <!-- User Details -->
            <div class="col-md-6">
                <h2 class="section-title"><i class="fas fa-user me-2"></i>User Details</h2>
                <ul class="list-group">
                    <li class="list-group-item"><strong>Username:</strong> <%= user.username %></li>
                    <li class="list-group-item"><strong>Email:</strong> <%= user.email %></li>
                    <li class="list-group-item"><strong>Joined:</strong> <%= user.createdAt ? new Date(user.createdAt).toLocaleDateString() : 'N/A' %></li>
                </ul>
            </div>

            <!-- User Preferences (Favorites) -->
            <div class="col-md-6">
                <h2 class="section-title"><i class="fas fa-heart me-2"></i>Favorite Movies</h2>
                <% if (user.favoriteMovies && user.favoriteMovies.length > 0) { %>
                    <ul class="list-group">
                        <% user.favoriteMovies.forEach(movie => { %>
                            <li class="list-group-item">
                                <strong><%= movie.title %></strong> 
                                <br><small>Genres: <%= movie.genres %> | TMDB ID: <%= movie.tmdbId %></small>
                            </li>
                        <% }); %>
                    </ul>
                <% } else { %>
                    <p class="no-favorites">No favorite movies added yet. Start liking recommendations!</p>
                <% } %>

                <h2 class="section-title mt-4"><i class="fas fa-book me-2"></i>Favorite Books</h2>
                <% if (user.favoriteBooks && user.favoriteBooks.length > 0) { %>
                    <ul class="list-group">
                        <% user.favoriteBooks.forEach(book => { %>
                            <li class="list-group-item">
                                <strong><%= book.title %></strong> 
                                <br><small>Authors: <%= book.authors %> | ISBN: <%= book.isbn %></small>
                            </li>
                        <% }); %>
                    </ul>
                <% } else { %>
                    <p class="no-favorites">No favorite books added yet. Start liking recommendations!</p>
                <% } %>
            </div>
        </div>

        <div class="text-center mt-5">
            <a href="/index" class="btn btn-primary">Back to Recommendations</a>
            <a href="/logout" class="btn btn-secondary ms-2">Logout</a> <!-- Add logout route if needed -->
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>