                } else {
                    // Show all (top_n=50 for practicality)
                    isViewingAll = true;
                    viewAllBtn.innerHTML = 'View Less <i class="fas fa-arrow-left"></i>';
                    showLoadingState();
                    await renderRecommendations(50);
